const nome = prompt("Digite o nome do herói: ");
const xp = parseInt(prompt("Digite a quantidade de XP: "));

let nivel = "Ferro";

if (xp >= 1001) {
  nivel = "Bronze";
}
if (xp >= 2001) {
  nivel = "Prata";
}
if (xp >= 5001) {
  nivel = "Ouro";
}
if (xp >= 7001) {
  nivel = "Platina";
}
if (xp >= 8001) {
  nivel = "Ascendente";
}
if (xp >= 9001) {
  nivel = "Imortal";
}
if (xp >= 10001) {
  nivel = "Radiante";
}

console.log(`O Herói de nome ${nome} está no nível de ${nivel}`);
