class Heroi {
    constructor(nome, idade, tipo) {
        this.nome = nome;
        this.idade = idade;
        this.tipo = tipo;
    }

    atacar() {
        let ataque;
        switch (this.tipo) {
            case 'mago':
                ataque = 'magia';
                break;
            case 'guerreiro':
                ataque = 'espada';
                break;
            case 'monge':
                ataque = 'artes marciais';
                break;
            case 'ninja':
                ataque = 'shuriken';
                break;
            default:
                ataque = '';
        }
        console.log(`o ${this.tipo} atacou usando ${ataque}`);
    }
}

// Exemplo de uso:
let heroi = new Heroi('John', 25, 'mago');
heroi.atacar();  // Sa√≠da: "o mago atacou usando usou magia"
